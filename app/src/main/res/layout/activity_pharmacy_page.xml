<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pharmacy_Page"
    android:background="@color/background">
    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/add_new_product"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/slogan_category"
        android:gravity="center"
        android:padding="20dp"
        android:background="@color/background"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/uploadimage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/add_photo"
            android:contentDescription=".pharmacy_page" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add photo"
            android:textColor="@color/black"

            />
        <EditText
            android:id="@+id/Product_name_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_edit"
            android:hint="Product name"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            tools:ignore="VisualLintTextFieldSize" />
        <EditText
            android:id="@+id/Product_content_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_edit"
            android:hint="Product content"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:inputType="text"
            android:textColorHint="@color/grey"
            />
        <EditText
            android:id="@+id/Product_price_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_edit"
            android:hint="Product Price"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:inputType="text"
            android:textColorHint="@color/grey"
            />
        <EditText
            android:id="@+id/Pharmacy_address_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_edit"
            android:hint="Pharmacy address"
            android:textColorHint="@color/grey"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:inputType="textPostalAddress"
            />

        <Button
            android:id="@+id/Pharmacy_upload_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_edit"
            android:text="Upload"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            />




    </LinearLayout>
</RelativeLayout>