<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity"
    android:background="@color/whitedark"
    >

    <TextView
        android:id="@+id/productdetails_txt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Product Details"
        android:textSize="30dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"

        android:background="@color/background"

        />

    <ImageView
        android:id="@+id/productdetails_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/productdetails_txt"
        android:padding="15dp"
        />
    <RelativeLayout
        android:layout_below="@id/productdetails_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        >
        <TextView
            android:id="@+id/productdetails_pname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product name"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/productdetails_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/productdetails_pname"
            android:text="Product price"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/productdetails_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/productdetails_price"
            android:text="Product content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            />



   <LinearLayout
       android:id="@+id/productdetail_linearlayout1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="start"
       android:layout_marginTop="10dp"
       android:layout_below="@id/productdetails_content">

       <ImageButton
           android:id="@+id/productdetails_decrement_btn"

           android:layout_width="40dp"
           android:layout_height="wrap_content"
           android:text="-"
           android:textSize="15dp"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:src="@drawable/baseline_remove_24"
           android:backgroundTint="@color/black"
           />

       <TextView
           android:id="@+id/productdetails_quantity"
           android:layout_width="30dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="7dp"
           android:text="0"
           android:textAlignment="center"
           android:textColor="@color/black"
           android:textSize="23dp" />
       <ImageButton
           android:id="@+id/productdetails_increment_btn"
           android:layout_width="40dp"
           android:layout_height="wrap_content"
           android:text="+"
           android:textSize="15dp"
           android:src="@drawable/baseline_add_24"
           android:backgroundTint="@color/black"
           android:textColor="@color/white"
           android:textStyle="bold"
           />

   </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:layout_below="@id/productdetail_linearlayout1">

        <Button
            android:id="@+id/productdetails_add_tocart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to cart"
            android:textSize="13dp"
            android:background="@color/background"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="13dp"
            android:textAlignment="center"
            />
        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>