<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Doctor_signup"
    android:padding="20sp"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="100dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@color/white">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@color/colorbackground"
            >
            <TextView
                android:id="@+id/dsignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textStyle="bold"

                android:textAlignment="center"
                android:textSize="36sp"

                android:textColor="@color/purple_500"


                android:gravity="center_horizontal"
                />

            <EditText
                android:id="@+id/dfirstname_signup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="8sp"
                android:layout_marginTop="40sp"
                android:layout_below="@id/dsignup"
                android:textColor="@color/black"

                android:textColorHint="@color/grey"
                android:background="@drawable/circular_edit"
                android:textSize="15sp"
                android:inputType="textCapWords"
                android:hint="First Name"
                tools:ignore="Autofill" />


            <EditText
                android:id="@+id/demail_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/circular_edit"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="15sp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="15sp"
                android:autofillHints="" />

            <EditText
                android:id="@+id/dsign_phone_1"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circular_edit"
                android:hint="Phone"
                android:inputType="phone"
                android:padding="15sp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/dpassword_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/grey"
                android:background="@drawable/circular_edit"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:hint="Password" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dsignup_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="16dp"
                android:background="@drawable/circular_edit"
                android:backgroundTint="@color/teal_200"
                android:text="Signup" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15sp"
                >
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Already have an account"

                    />

                <TextView
                    android:id="@+id/dsignIn_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"
                    />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>